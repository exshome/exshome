<ul>
  <%= for track <- @deps.playlist.tracks do %>
    <li>
      <button phx-click="play" phx-value-id={track.id}>
        <%= if @deps.playlist.current_id == track.id, do: "🎧", else: "▶️" %>
        <%= if String.trim(track.name) == "", do: "Unknown", else: track.name %>
        <%= track.path %>
      </button>
    </li>
  <% end %>
</ul>
