<section class="max-h-full h-full flex flex-col">
  <section class="flex items-center justify-center">
    <.button phx-click="open_file_modal">
      upload file
    </.button>
    <.button phx-click="open_new_link_modal">
      add a link
    </.button>
  </section>
  <section class="flex-grow h-full overflow-auto">
    <.list rows={@deps.playlist.tracks} let={track}>
      <:row_before let={track}>
        <button
          phx-click="play"
          phx-value-id={track.id}
          class={"text-4xl #{if @deps.playlist.current_id == track.id, do: 'playing'}"}
        >
          <%= if @deps.playlist.current_id == track.id, do: "ğŸ§", else: "â–¶ï¸" %>
        </button>
      </:row_before>
      <:row_after let={track}>
        <%= if track.type == :url do %>
          <button phx-click="edit" phx-value-id={track.id} class="text-4xl">
            ï¸âœï¸
          </button>
        <% end %>
        <button
          phx-click="delete"
          phx-value-id={track.id}
          data-confirm="Do you really want to delete this track?"
          class="text-4xl"
        >
          ğŸ—‘ï¸
        </button>
      </:row_after>
      <div class={if @deps.playlist.current_id == track.id, do: "font-bold dark:text-yellow-200"}>
        <div class="text-xl">
          <%= if String.trim(track.title) == "", do: "Unknown", else: track.title %>
        </div>
        <div class="text-xs">
          <%= track.path %>
        </div>
      </div>
    </.list>
  </section>
</section>
