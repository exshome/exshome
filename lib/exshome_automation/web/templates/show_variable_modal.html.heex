<section id="show_variable_modal" class="flex flex-col items-center justify-center h-full">
  <form class="w-full md:w-3/4 flex items-center justify-center" phx-change="rename">
    <%= if @rename do %>
      <.datatype_input
        type={Exshome.Datatype.String}
        value={@config.name}
        validations={%{}}
        name="name"
      />
    <% else %>
      <h2 class="text-lg md:text-3xl font-black">
        <%= @config.name %>
      </h2>
    <% end %>
    <%= if @config.can_rename? do %>
      <.button class="text-xs mb-2" phx-click="toggle_rename" type="button">
        <%= if @rename, do: "âŒ", else: "ï¸âœï¸" %>
      </.button>
    <% end %>
  </form>
  <div class="text-xs mb-3">
    <.chip>
      <%= Exshome.Datatype.icon(@config.type) %>
      <%= Exshome.Datatype.name(@config.type) %>
    </.chip>
    <%= if @config.readonly? do %>
      <.chip>
        ðŸ”’ readonly
      </.chip>
    <% end %>
  </div>

  <%= if @config.not_ready_reason do %>
    <div class="text-md text-red-400/80">
      <%= @config.not_ready_reason %>
    </div>
  <% else %>
    <%= if !@config.readonly? do %>
      <form class="p-1 w-full md:w-3/4 flex flex-col items-center" phx-change="update_value">
        <.datatype_input
          type={@config.type}
          value={@deps.variable}
          validations={@config.validations}
          name="variable"
        />
        <%= if @error_message do %>
          <div type="error" class="text-red-300"><%= @error_message %></div>
        <% end %>
      </form>
    <% end %>
    <div class="text-xl">
      Value:
      <span class="font-black">
        <.datatype_value type={@config.type} value={@deps.variable} />
      </span>
    </div>
  <% end %>
</section>
